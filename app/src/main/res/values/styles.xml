<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--        타이틀 바 제거-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--        폰트-->
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>

        <!--        테마 색상-->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="android:scrollbarThumbVertical">@color/mainColor</item>

        <!--        멀티터치 블록-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--        타이틀 바 제거-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--        폰트-->
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>

        <!--        테마 색상-->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="android:scrollbarThumbVertical">@color/mainColor</item>

        <!--        멀티터치 블록-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#52000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>