<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/ll_memoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_memobox_ll"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="74dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/t_oMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="추가할 메모를 입력하세요."
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:textColor="@color/darkGray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="사진"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_saveMemo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="저장"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_startBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_todaybox_ll"
        android:padding="10dp">

        <TextView
            android:id="@+id/t_oTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="6dp"
            android:text="화상강의"
            android:textColor="@color/darkGray"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t_oTime"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t_oTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:30"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t_open"
            app:layout_constraintStart_toEndOf="@id/t_oTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanum_square_eb"
            android:text="∨"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_stop"
            app:layout_constraintStart_toEndOf="@id/t_oTime"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_stop"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/nanum_square_eb"
            android:text="STOP"
            android:textColor="@color/mainColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
